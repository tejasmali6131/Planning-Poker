{
  "name": "planning-poker-pro",
  "version": "1.0.0",
  "description": "Planning Poker Pro - Full Stack Application",
  "scripts": {
    "start": "npm run build:frontend && npm run start:backend",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm start",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "serve": "npm run build && npm run start:backend",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:coverage": "concurrently \"npm run test:coverage:backend\" \"npm run test:coverage:frontend\"",
    "test:coverage:backend": "cd backend && npm run test:coverage",
    "test:coverage:frontend": "cd frontend && npm run test:coverage",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rimraf backend/node_modules frontend/node_modules node_modules",
    "docker:build": "docker build -t planning-poker .",
    "docker:run": "docker run -d --name planning-poker-app -p 4000:4000 --restart unless-stopped planning-poker",
    "docker:stop": "docker stop planning-poker-app",
    "docker:remove": "docker rm planning-poker-app",
    "docker:logs": "docker logs planning-poker-app",
    "docker:clean": "docker system prune -f && docker image prune -f"
  },
  "keywords": ["planning-poker", "agile", "scrum", "estimation"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  }
}
